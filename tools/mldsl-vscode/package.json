{
  "name": "mldsl-helper",
  "displayName": "MLDSL Helper",
  "description": "Completion/hover/definition for MLDSL based on generated api_aliases.json",
  "version": "0.0.26",
  "publisher": "local",
  "license": "SEE LICENSE.txt",
  "repository": {
    "type": "git",
    "url": "https://github.com/rainbownyashka/mldsl.git"
  },
  "engines": {
    "vscode": "^1.80.0"
  },
  "files": [
    "extension.js",
    "language-configuration.json",
    "snippets.json",
    "syntaxes/**",
    "README.md",
    "LICENSE.txt",
    "package.json"
  ],
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:mldsl",
    "onStartupFinished"
  ],
  "main": "./extension.js",
  "contributes": {
    "languages": [
      {
        "id": "mldsl",
        "aliases": [
          "MLDSL"
        ],
        "extensions": [
          ".mldsl"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "mldsl",
        "scopeName": "source.mldsl",
        "path": "./syntaxes/mldsl.tmLanguage.json"
      }
    ],
    "snippets": [
      {
        "language": "mldsl",
        "path": "./snippets.json"
      }
    ],
    "configuration": {
      "title": "MLDSL Helper",
      "properties": {
        "mldsl.apiAliasesPath": {
          "type": "string",
          "default": "",
          "description": "Path to generated api_aliases.json (leave empty to auto-detect)"
        },
        "mldsl.docsRoot": {
          "type": "string",
          "default": "",
          "description": "Root folder with generated markdown docs (leave empty to auto-detect)"
        },
        "mldsl.pythonPath": {
          "type": "string",
          "default": "python",
          "description": "Python executable used to run the compiler (e.g. python, py, C:\\\\Python313\\\\python.exe)"
        },
        "mldsl.compilerPath": {
          "type": "string",
          "default": "",
          "description": "Path to compiler. Can be mldsl.exe (recommended) or tools/mldsl_compile.py (legacy). Leave empty to auto-detect."
        },
        "mldsl.planPath": {
          "type": "string",
          "default": "",
          "description": "Where to write plan.json (leave empty for %APPDATA%\\\\.minecraft\\\\plan.json)"
        }
      }
    },
    "commands": [
      {
        "command": "mldsl.reloadApi",
        "title": "MLDSL: Reload API Aliases"
      },
      {
        "command": "mldsl.compileAndCopy",
        "title": "MLDSL: Compile & Copy Command(s)"
      },
      {
        "command": "mldsl.publishModule",
        "title": "MLDSL: Publish Module (open Hub + files)"
      },
      {
        "command": "mldsl.compilePlan",
        "title": "MLDSL: Compile to plan.json"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "command": "mldsl.publishModule",
          "when": "resourceLangId == mldsl",
          "group": "navigation"
        },
        {
          "command": "mldsl.compilePlan",
          "when": "resourceLangId == mldsl",
          "group": "navigation"
        }
      ]
    }
  }
}
